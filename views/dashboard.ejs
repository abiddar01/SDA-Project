  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body, html {
      height: 100%;
      font-family: 'Orbitron', sans-serif;
      background: #000;
      color: white;
    }
    .navbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 20px 40px;
      background-color: rgba(0, 0, 0, 0.8);
      box-shadow: 0 0 10px #e30613;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .navbar .nav-links {
      display: flex;
      gap: 25px;
      list-style: none;
    }
    .navbar .nav-links li a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      font-size: 1em;
      padding: 10px 15px;
      border-radius: 20px;
      transition: all 0.3s ease;
    }
    .navbar .nav-links li a:hover {
      background-color: #e30613;
      box-shadow: 0 0 10px #e30613;
    }
    .hero {
      position: relative;
      height: 90vh;
      background: url('dash-bg.jpg') center/cover no-repeat;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .overlay {
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background: rgba(0, 0, 0, 0.7);
      z-index: 1;
    }
    .content {
      position: relative;
      z-index: 2;
      text-align: center;
      animation: fadeIn 2s ease-in forwards;
      opacity: 0;
    }
    @keyframes fadeIn {
      to {
        opacity: 1;
      }
    }
    h1 {
      font-size: 3.5em;
      margin-bottom: 20px;
      color: #fff;
      text-shadow: 0 0 10px rgba(255,255,255,0.3);
    }
    .dashboard-button {
      background: #e30613;
      border: none;
      padding: 15px 40px;
      font-size: 1.2em;
      color: white;
      border-radius: 30px;
      cursor: pointer;
      box-shadow: 0 0 10px #e30613, 0 0 20px #e30613, 0 0 30px #e30613;
      animation: pulse 2s infinite;
    }
    .dashboard-button:hover {
      background: #fff;
      color: #e30613;
      box-shadow: 0 0 20px white;
    }
    @keyframes pulse {
      0% { transform: scale(1); }
      50% { transform: scale(1.1); }
      100% { transform: scale(1); }
    }
    .admin-sections {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 30px;
      padding: 40px;
      background: #111;
    }
    .admin-sections a {
      text-decoration: none;
      color: inherit;
    }

    .admin-card {
      display: block;
      cursor: pointer;
      background: #222;
      border: 1px solid #e30613;
      border-radius: 15px;
      padding: 30px;
      text-align: center;
      box-shadow: 0 0 15px #e30613;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      animation: slideUp 0.8s ease forwards;
      opacity: 0;
    }

    .admin-card:hover {
      transform: scale(1.05);
      box-shadow: 0 0 25px #e30613;
    }

    @keyframes slideUp {
    0% {
      opacity: 0;
      transform: translateY(20px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }  
