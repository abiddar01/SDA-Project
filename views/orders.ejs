<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Orders Summary - Admin</title>
  <link rel="icon" href="/favicon.png" sizes="32x32" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@600&display=swap" rel="stylesheet">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background-image: url('/orders.jpg');
      background-size: cover;
      background-position: center;
      font-family: 'Orbitron', sans-serif;
      margin: 0;
      padding: 0;
      min-height: 100vh;
      overflow-x: hidden;
    }

    .navbar {
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      z-index: 999;
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 18px 40px;
      background-color: rgba(0, 0, 0, 0.85);
      box-shadow: 0 0 10px #ff0000;
    }

    .navbar .logo span {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.8rem;
      color: white;
      text-shadow: 0 0 10px rgba(255, 255, 255, 0.3);
    }

    .nav-links {
      display: flex;
      gap: 20px;
      list-style: none;
    }

    .nav-links li a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
      font-size: 1em;
      padding: 8px 14px;
      border-radius: 20px;
      transition: all 0.3s ease;
    }

    .nav-links li a:hover {
      background-color: #ff0000;
      color: #000;
      box-shadow: 0 0 10px #ff0000;
    }

    .orders-container {
      background-color: rgba(0, 0, 0, 0.6);
      border-radius: 20px;
      border: 2px solid #ff4d4d;
      box-shadow:
        0 0 10px #e30613,
        0 0 30px #ff4d4d,
        0 0 50px #ff9999;
      padding: 40px;
      width: 95%;
      max-width: 1300px;
      backdrop-filter: blur(15px);
      margin: 120px auto 40px auto; /* Adds space below fixed header */
      animation: fadeIn 2s ease forwards;
    }

    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(-20px); }
      to { opacity: 1; transform: translateY(0); }
    }

    h1 {
      text-align: center;
      color: #fff;
      margin-bottom: 30px;
      font-size: 2.5em;
      text-shadow: 0 0 10px #ff4d4d, 0 0 20px #e30613;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 10px;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(255, 0, 0, 0.3);
      animation: pulseGlow 2s infinite;
    }

    @keyframes pulseGlow {
      0%, 100% { box-shadow: 0 0 20px rgba(255, 0, 0, 0.3); }
      50% { box-shadow: 0 0 40px rgba(255, 0, 0, 0.5); }
    }

    thead tr {
      background-color: #ff4d4d;
      color: #fff;
      text-align: left;
    }

    th, td {
      padding: 15px;
      border: 1px solid #ff9999;
      font-size: 0.95em;
      color: #fff;
    }

    tbody tr:nth-child(even) {
      background-color: rgba(255, 255, 255, 0.03);
    }

    tbody tr:hover {
      background-color: rgba(255, 0, 0, 0.2);
      transition: 0.3s;
    }

    @media (max-width: 768px) {
      th, td {
        font-size: 12px;
        padding: 10px;
      }
      h1 {
        font-size: 1.8em;
      }
    }
  </style>
</head>
<body>

  <!-- âœ… Fixed Admin Header -->
  <header class="navbar">
    <div class="logo">
      <span>Elegance Wheels</span>
    </div>
    <nav>
      <ul class="nav-links">
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/dashboard/create">Create</a></li>
        <li><a href="/dashboard/read">Read</a></li>
        <li><a href="/dashboard/orders">Orders</a></li>
        <li><a href="/logout">Logout</a></li>
      </ul>
    </nav>
  </header>

  <!-- ðŸ§¾ Orders Table -->
  <div class="orders-container">
    <h1><i class="fa-solid fa-list"></i> All Orders</h1>
    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>City</th>
          <th>Variant</th>
          <th>Booking Date</th>
        </tr>
      </thead>
      <tbody>
        <% orders.sort((a, b) => new Date(b.createdAt) - new Date(a.createdAt)).forEach(order => { %>
          <tr>
            <td><%= order.fullName %></td>
            <td><%= order.phone %></td>
            <td><%= order.email %></td>
            <td><%= order.city %></td>
            <td><%= order.variant %></td>
            <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
